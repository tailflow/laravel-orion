{
    "name": "tailflow/laravel-orion",
    "description": "Laravel Orion allows you to build a fully featured REST API based on your Eloquent models and relationships with the simplicity of Laravel as you love it.",
    "keywords": [
        "laravel",
        "api"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/tailflow/laravel-orion/issues",
        "source": "https://github.com/tailflow/laravel-orion"
    },
    "authors": [
        {
            "name": "Aleksei Zarubin",
            "email": "alex@tailflow.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "doctrine/dbal": "^2.9|^3.1",
        "illuminate/bus": ">=6.0",
        "illuminate/contracts": ">=6.0",
        "illuminate/database": ">=6.0",
        "illuminate/http": ">=6.0",
        "illuminate/pagination": ">=6.0",
        "illuminate/support": ">=6.0",
        "laravel/legacy-factories": "^1.3",
        "symfony/yaml": "^5.3|^6.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^4.0|^5.0|^6.0|^7.0",
        "phpunit/phpunit": "^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Orion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orion\\Tests\\": "tests/",
            "Orion\\Tests\\Fixtures\\App\\": "tests/Fixtures/app/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Orion\\OrionServiceProvider"
            ],
            "aliases": {
                "Orion": "Orion\\Facades\\Orion"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
